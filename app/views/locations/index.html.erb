<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<h1> Directorio para mascotas Medellín</h1>
<!--<div class="container-responsive" style="padding-top: 20px">-->
  <div style='width: 100%;'>
    <div id="map" style='width: 800px; height: 400px;'></div>
  </div>

  <script type="text/javascript">
    handler = Gmaps.build('Google');
	handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
	  markers = handler.addMarkers(/*<%=raw @hash.to_json %>*/
	  [
	    {
	      "lat": 40.689167,
	      "lng": -74.044444,
	      "picture": {
	        "url": "http://people.mozilla.com/~faaborg/files/shiretoko/firefoxIcon/firefox-32.png",
	        "width":  32,
	        "height": 32
	      },
	      "infowindow": "hello!"
	    }
	  ]
	 );

	 handler.bounds.extendWith(markers);
	 handler.fitMapToBounds();
       });
  </script>
<!--</div>-->
<div class="table-striped table-responsive">
  <table class="table">
    <thead>
    <th>Lugar             </th>
    <th>Descripción             </th>
    <th>Dirección              </th>
    <th>Mapa              </th>
    <th>Calificación              </th>
    </thead>
    <tbody>
      <% @locations.each do |location|%>
        <tr>
        <td><%= location.name %></td>
        <td><%= location.description %></td>
        <td><%= location.address %></td>
          <% unless location.location_latitude.nil? && location.location_longitude.nil? %>
            <td>
              <%= image_tag "http://maps.google.com/maps/api/staticmap?size=150x150&sensor=false&zoom=14&markers=#{location.location_latitude}%2C#{location.location_longitude}" %>
            </td>
          <%end%>
        <td><%= location.rating %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="row">
  <%= link_to "Agregar ubicación",
  new_location_path,
  class: 'btn btn-default btn-sm'%>
</div>
